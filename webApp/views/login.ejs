</div>
    
</div>
<div class="iframe" onclick="explain()">
    <iframe src="" frameborder="0" scrolling="no" id="myFrame" ></iframe>
</div>
<script type='text/javascript' src='http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js?ver=1.3.2'></script>
<script>
    let exp = false;
    function pool(){
          document.getElementById("myFrame").src = "/pool";
          document.getElementById("myFrame").style.visibility = 'visible';
          document.getElementById("myFrame").style.height = '400px';
          document.getElementById("map").style.background = "url(assets/bMapOverlay.png)"
          
}
    function time(){
          document.getElementById("myFrame").src = "/time";
          document.getElementById("myFrame").style.visibility = 'visible';
          document.getElementById("myFrame").style.height = '400px';
          document.getElementById("map").style.background = "url(assets/bMapOverlay.png)"
          
}
    function trans(){
        document.getElementById("myFrame").src = "/trans";
          document.getElementById("myFrame").style.visibility = 'visible';
          document.getElementById("myFrame").style.height = '400px';
          document.getElementById("map").style.background = "url(assets/bMapOverlay.png)"
    }
document.addEventListener('mouseup', function(e) {
  var container = document.getElementById('myFrame');
  if (!container.contains(e.target)) {
    container.style.visibility = 'none';
    container.style.height = '0px';
    document.getElementById("map").style.background = "url(assets/bMap.png)";
    exp = false;
  }
  $('#myFrame').click(function(){

$('iframe').contents().find('body').css('background-image', 'url(url_of_img.png)');
$('iframe').contents().find('body').css('opacity', 0.8);

});
});
</script>


