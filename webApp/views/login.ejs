    </div>
    <iframe name="votar" style="display:none;"></iframe>
    <div class="form">
    <form action="/login" method="POST" target="votar">
        <div class="inputFields">
   <label for="name"></label> <input placeholder="Name" autocomplete="off" type="text" name="name" id="name" >
   <label for="current"></label><input placeholder="Current Location" autocomplete="off" type="text" name="current" id="current">
   <label for="destination"></label><input type="text" placeholder="Destination Location" autocomplete="off" name="destination" id="destination">
